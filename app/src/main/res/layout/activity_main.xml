<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="css.cis3334.intentsperformances.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming Events"
        android:textSize="18sp"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/spotlight1"
            android:id="@+id/imageButton"
            android:layout_weight="1" />

        <TextView
            android:text="SAL Colloquium “The Robot Next Door” \nFriday, February 24, 2017, 3:40 – 4:40 p.m.\nTower Hall 4119"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Web Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1WebInfo"
            android:layout_weight="1" />

        <Button
            android:text="Add to Calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1Calendar"
            android:layout_weight="1" />

        <Button
            android:text="Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1map"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStatus" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <ImageButton
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/spotlight2"
            android:id="@+id/imageButton2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:text="CSS Choirs at Home\nThursday March 2 from 7:30pm-9:30pm\nMitchell Auditorium" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:weightSum="1">

        <Button
            android:text="Web Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:id="@+id/webButton2" />

        <Button
            android:text="ADD TO CALENDAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendarButton2"
            android:layout_weight="0.31" />

        <Button
            android:text="MAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mapButton2"
            android:layout_weight="0.43" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/spotlight3"
            android:id="@+id/imageButton4" />

        <TextView
            android:text="The Secret Life of Children\nSaturday,March 4 at 7:30pm\nMitchell Auditorium"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/textView6"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:text="WEB INFO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webButton3" />

        <Button
            android:text="ADD TO CALENDAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendarButton3" />

        <Button
            android:text="MAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mapButton3"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
